{
  "manifest_version": 3,
  "name": "OneTab Media",
  "version": "1.0",
  "description": "Control media playback across all tabs with video speed controls",

  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["controller.css"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "OneTab Media",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "options_page": "options.html",

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["shadow.css"],
      "matches": ["<all_urls>"]
    }
  ]
} 