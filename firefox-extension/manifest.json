{
  "manifest_version": 2,
  "name": "OneTab Media",
  "version": "1.0",
  "description": "Control media playback across all tabs with video speed controls",

  "permissions": [
    "storage",
    "tabs",
    "<all_urls>",
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["controller.css"],
      "run_at": "document_start"
    }
  ],

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "OneTab Media",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "web_accessible_resources": [
    "shadow.css"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "onetab-media@example.com",
      "strict_min_version": "79.0"
    }
  }
} 